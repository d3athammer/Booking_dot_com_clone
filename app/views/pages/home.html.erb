<div class="banner">
  <div class="container h-100 d-flex align-items-center">
    <div>
      <h1>Find your next stay</h1>
      <p>Search deals on hotels, homes and much more...</p>
    </div>
  </div>
</div>
<div class="container">
  <form>
    <div class="row">
      <div class="d-flex justify-content-center mx-auto px-0">
        <div class="col">
          <input type="text" class="form-control" placeholder="Where are you going">
        </div>
        <div class="col">
          <input type="text" class="form-control" placeholder="Check-in" onfocus="(this.type='date')" onblur="(this.type='text')">
        </div>
        <div class="col">
          <input type="text" class="form-control" placeholder="Check-out" onfocus="(this.type='date')" onblur="(this.type='text')">
        </div>
        <div class="col stop-grow">
          <button class="btn btn-primary h-100 set-border" type="submit">Search</button>
        </div>
      </div>
    </div>
  </form>
</div>
